<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/no_card_ico"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_payment_method"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/ts_16_sp"/>

    <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10dp"
            android:gravity="center"
            android:background="@drawable/btn_corner_5dp_blue">

        <TextView
                android:id="@+id/tv_add_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_16dp"
                android:paddingTop="@dimen/padding_16dp"
                android:text="@string/add_now"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_14_sp"/>
    </LinearLayout>

</LinearLayout>